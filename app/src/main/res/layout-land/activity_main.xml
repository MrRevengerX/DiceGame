<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@color/purple_100"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homePageDice"
            android:layout_width="217dp"
            android:layout_height="154dp"
            android:layout_marginRight="100dp"
            app:srcCompat="@drawable/homescreen_dice_dark" />

        <LinearLayout
            android:id="@+id/gameControllers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homeWinLossCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="H:0/C:0"
                android:textColor="@color/DefaultDark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Game Target"
                android:textColor="@color/DefaultDark" />

            <EditText
                android:id="@+id/inputTargetScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:ems="4"
                android:gravity="center"
                android:hint="101"
                android:inputType="number"
                android:textColor="@color/DefaultDark"
                android:textColorHighlight="@color/purple_150"
                android:textColorLink="@color/purple_200"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnNewGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="New Game"
                android:textColor="@color/DefaultDark"
                app:icon="@android:drawable/ic_media_play"
                app:iconSize="15sp"
                app:iconTint="@color/DefaultDark" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:text="Info"
                android:textColor="@color/DefaultDark"
                app:icon="@android:drawable/ic_dialog_info"
                app:iconSize="12sp"
                app:iconTint="@color/DefaultDark" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>